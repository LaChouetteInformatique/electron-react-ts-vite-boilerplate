{
  "name": "electron-react-ts-vite-template",
  "productName": "Mon Application",
  "private": true,
  "version": "0.0.0",
  "description": "Un boilerplate pour des applications de bureau avec Electron, React, Vite, TypeScript et ShadCN/UI.",
  "type": "module",
  "main": "dist-electron/backend/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel --race dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:3524 && npm run transpile:electron && tsc-alias -p src/backend/tsconfig.json && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/backend/tsconfig.json && cpx 'src/backend/config.json' 'dist-electron/electron'",
    "dist:mac": "npm run transpile:electron && tsc-alias -p src/backend/tsconfig.json && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && tsc-alias -p src/backend/tsconfig.json && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && tsc-alias -p src/backend/tsconfig.json && npm run build && electron-builder --linux --x64",
    "concat": "node concat_code.cjs",
    "concat:stable": "node concat_code.cjs --no-timestamp"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/vite": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "globby": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "tsc-alias": "^1.8.16",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "wait-on": "^9.0.1"
  }
}
